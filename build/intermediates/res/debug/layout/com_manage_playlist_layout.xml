<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include 
          android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ccm_songremoval_title_height"
        layout="@layout/ccm_header_layout"
        />
    
    <ListView 
        android:id="@+id/PlayListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        ></ListView>
    
     <View 
         android:id="@+id/viewTop"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/ccm_playlistmanage_border"
         android:layout_below="@+id/include1"
        />
    <LinearLayout 
        android:id="@+id/llParentLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/ccm_cancel_text_color"
        android:layout_below="@+id/viewTop"
        android:padding="1dp"
        >
        
          <ImageView 
         android:id="@+id/imgStickeyheader"
         android:layout_gravity="center_vertical"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:padding="5dp"
       android:layout_marginLeft="10dp"
       android:background="@drawable/manage_playlist_dayparting"
        />
        
    <TextView 
        android:id="@+id/txtStickeyheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/ccm_playlistmanage_header_text"
        android:textSize="20sp"
        android:text="@string/com_manage_playlist_Dayparting"
        />
    
    
   
</LinearLayout>
  <View 
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/ccm_playlistmanage_border"
        android:layout_below="@+id/llParentLayout"
        />
</RelativeLayout>
