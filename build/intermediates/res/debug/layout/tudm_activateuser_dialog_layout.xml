<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ccm_activate_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ccm_forgot_left_margin"
        android:layout_marginRight="@dimen/ccm_forgot_right_margin"
        android:layout_marginTop="@dimen/ccm_forgot_top_margin"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ccm_forgot_top_margin"
        android:background="@color/ccm_action_button_backgroud_disabled" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ccm_forgot_left_margin"
        android:layout_marginRight="@dimen/ccm_forgot_right_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ccm_activate_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/ccm_forgot_top_margin"
            android:layout_marginTop="@dimen/ccm_forgot_top_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/ccm_active_cancel"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/ccm_action_button_backgroud_default" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/ccm_action_button_backgroud_disabled" />

        <TextView
            android:id="@+id/ccm_activate_Ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/ccm_forgot_top_margin"
            android:layout_marginTop="@dimen/ccm_forgot_top_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/ccm_ok"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/ccm_action_button_backgroud_default" />

    </LinearLayout>
</LinearLayout>
