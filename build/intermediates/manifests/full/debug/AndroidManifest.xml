<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudcovermusic.ccm"
    android:versionCode="1"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <intent android:action="android.settings.WIRELESS_SETTINGS" />

    <application
        android:name="com.cloudcovermusic.ccm.CCMApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cloudcovermusic.ccm.CCMLogin"
            android:configChanges="orientation"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMPlayer"
            android:configChanges="orientation"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMSettingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMHelp"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMForgotPwd"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMPolicyTerms"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMDeviceList"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMSongRemoval"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMPlayListManager"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cloudcovermusic.ccm.CCMManageMessage"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name="com.android.cloudcovermusic.service.CCMService"
            android:stopWithTask="true" >
            <intent-filter>
                <action android:name="com.android.cloudcovermusic.PLAY_TRACK" />
            </intent-filter>
        </service>
        <service
            android:name="com.android.cloudcovermusic.service.CCMCachingService"
            android:stopWithTask="true" >
            <intent-filter>
                <action android:name="com.android.cloudcovermusic.DOWNLOAD_TRACK" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.android.cloudcovermusic.receiver.CCMReceiver"
            android:stopWithTask="true" >
            <intent-filter>
                <action android:name="com.android.cloudcovermusic.DOWNLOAD_TRACK_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.android.cloudcovermusic.receiver.CCMCallReceiver"
            android:enabled="true"
            android:stopWithTask="true" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.android.cloudcovermusic.receiver.CCMAlarmReceiver"
            android:stopWithTask="true" />
    </application>

</manifest>