<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ccm_cancel_text_color"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/ccm_playlistmanage_border" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/manage_playlist_dayparting"
            android:padding="5dp" />

        <TextView
            android:id="@+id/txtHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/com_manage_playlist_Dayparting"
            android:textColor="@color/ccm_playlistmanage_header_text"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/ccm_playlistmanage_border" />
</LinearLayout>
