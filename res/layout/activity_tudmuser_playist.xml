<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.turnupdmood.tudm.TUDMUserPlaylist">

    <include
        android:id="@+id/include1"
        layout="@layout/tudm_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ccm_songremoval_title_height" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

    </LinearLayout>
    <ImageButton
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src="@drawable/play"
        android:layout_gravity="end"
        android:scaleType="fitXY"
        android:layout_below="@+id/icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ccmSongInfo"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:text="Aahatein- The Splitsvilla 4 Theme Song.mp3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="2dp"
        android:textColor="#33CC33"
        android:layout_alignTop="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_alignBottom="@+id/image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:text="Parikrama - But it rained.mp3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="2dp"
        android:textColor="#33CC33"
        android:layout_below="@+id/image"
        android:layout_alignRight="@+id/ccmSongInfo"
        android:layout_alignEnd="@+id/ccmSongInfo"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src="@drawable/play"
        android:layout_gravity="end"
        android:scaleType="fitXY"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout2" />
</RelativeLayout>
